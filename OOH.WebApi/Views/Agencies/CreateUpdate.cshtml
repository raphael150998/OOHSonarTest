@model OOH.WebApi.Models.Agency.AgencyVm

    <style>
        label.error, i.error {
            color: tomato;
        }

        input.error, input.error:focus {
            border-color: tomato;
        }

        i.error {
            position: absolute;
            top: 40px;
            right: 25px;
        }
    </style>

    <form asp-controller="Agencies" asp-action="CreateUpdate" id="frmAgency" method="post">
        <div class="card">
            <div class="card-block">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <button type="button" class="btn btn-btn-outline-primary">Nuevo</button>
            </div>
        </div>
        <div class="card">
            <div class="card-block">
                <div class="row">
                    <input type="hidden" class="form-control" asp-for="Id" />
                    <div class="col-md-6">
                        <label>Nombre de agencia</label>
                        <input required type="text" class="form-control" asp-for="Name" />
                        @*<span asp-validation-for="Name"></span>*@
                    </div>
                    <div class="col-md-6">
                        <label>Comisión</label>
                        <input required type="text" class="form-control" asp-for="Rate" />
                        @*<span asp-validation-for="Rate"></span>*@
                    </div>
                </div>
            </div>
        </div>
    </form>

    @section scripts{

        <script>



            $(function () {
