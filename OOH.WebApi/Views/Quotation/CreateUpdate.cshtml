@model OOH.Data.Models.Cotizaciones;
@{
    ViewData["Title"] = "CreateUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input asp-for="CotizacionId" hidden /> 
<div class="card">
    <div class="card-block row">
        <div class="col-md-3 container">
            <button type="submit" id="BtnSubmit" class="btn btn-primary" onclick="PostMaestroDetalle()"><i class="far fa-save"></i>Guardar</button>
            <strong class="btn btn-outline-primary" onclick="edit('0')"> <i class="fa fa-pencil-square-o"></i>Nuevo</strong>
        </div>

        <div class="col-md-3 container">
            <button class="btn btn-outline-danger">PDF</button>
            <button class="btn btn-outline-warning">Powert Point</button>
        </div>

        <div class="col-md-2">
            <button class="btn btn-outline-success">Postear</button>
        </div>
        <div class="col-md-2">
            <input class="form-control" value="ESTADO" readonly />
            <input asp-for="EstadoId" hidden />
        </div>

    </div>
</div>

<div class="card">
    <div class="card-block">

        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <label class="control-label">Cliente</label>
                    <div id="divClient">

                    </div>
                </div>
                <div class="col-md-6">
                    <label class="control-label">Atencion A</label>
                    <input class="form-control" id="txtAtencionA" />
                </div>  
                <div class="col-md-3">
                    <label class="control-label">Fecha</label>
                    <input class="form-control" readonly id="readOnlyFecha" />
                </div>
                <div class="col-md-3">
                    <label class="control-label">Agencia</label>
                    <div id="divAgenci"></div>
                </div>
                <div class="col-md-6">
                    <label class="control-label">Comentarios</label>
                    <textarea class="form-control" id="txtAreaComentarios"></textarea>
                </div>
                <div class="col-md-3">
                    <label class="control-label">Costo</label>
                    <br />
                    <input type="checkbox" class="js-single bool" id="ConsolidaCosto" name="ConsolidaCosto" />

                </div>


            </div>

        </div>
        <div class="row">
            <div class="col-md-1">
                <i class="fa fa-plus-square text-primary" id="addbtn" onclick="addCara(0)" style="font-size:25px"></i>
            </div>
            <div class="col-md-12">
                <table class="table" style="width:100%" id="CarasTable">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Codigo</th>
                            <th>Referencia</th>
                            <th>Dirección</th>
                            <th>Precio</th>
                            <th>Departamento</th>
                            <th>Iluminada</th>
                        
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="ModalCaras" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">

    <div class="modal-dialog modal-viva-lg h-100 d-flex flex-column justify-content-center my-0" role="document">
        <div class="modal-content">
            
            <div class="modal-header">
                <h5 class="modal-title text-center w-100" id="modalTitle">Añadir Caras</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                <div class="modal-body">
                    <div class="container">

                        <div class="row">
                            <div class="col-md-4">
                                <label>Sitio</label>
                                <select id="dropdownSitio">
                                  
                                </select>

                            </div>
                            <div class="col-md-4">
                                <label>Categoria</label>
                               
                                <div id="divDropCategoria">

                                </div>

                            </div>
                            <div class="col-md-4">
                                <label>Tipo</label>
                              
                                <div id="divDropTipo">

                                </div>
                            </div>
                            <br />
                            <br />
                            <br />
                            <br />
                        </div>
                    </div>
                    <div>
                        <table class="table" id="addCarasTable" style="width:100%">
                            <thead>
                                <tr>
                                    <th class="filter-action"></th>
                                    <th class="filter">Cara</th>
                                    <th class="filter">Categoria</th>
                                    <th class="filter">ReferenciaComercial</th>
                                    <th class="filter">Tipo</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                    <!-- Modal CaraDetalle -->
                    <div class="modal fade" id="ModalCarasDetalle" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">

                        <div class="modal-dialog modal-lg h-100 d-flex flex-column justify-content-center my-0" role="document">
                            <div class="modal-content">

                                <div class="modal-header">
                                    <h5 class="modal-title text-center w-100" id="modalTitle">Cosot de Caras</h5>
                                    <button type="button" class="close" id="btnDetalleCaraClose" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="container">
                                        <form id="formularioCostos">
                                            <div class="row">
                                                <input id="idCaraAdd" hidden />
                                                <div class="col-md-4">
                                                    <label class="control-label">Costo de arrendamiento</label>
                                                    <input type="text" class="form-control" data-mask="Decimal" id="CostoArrendamiento" />
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="control-label">Costo de impresion</label>
                                                    <input type="text" class="form-control" data-mask="Decimal" id="CostoImpresion" />
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="control-label">Costo de instalacion</label>
                                                    <input type="text" class="form-control" data-mask="Decimal" id="CostoInstalacion" />
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="control-label">Costo saliente</label>
                                                    <input type="text" class="form-control" data-mask="Decimal" id="CostoSaliente" />
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="control-label">Fecha Desde</label>
                                                    <input type="date" class="form-control" id="FechaDesde" />
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="control-label">Fecha Hasta</label>
                                                    <input type="date" class="form-control" id="FechaHasta" />
                                                </div>


                                            </div>

                                        </form>

                                        <br />
                                        <br />
                                     

                                    </div>
                                    <div class="modal-footer">
                                        <div class="col-md-4" style="float:right">
                                            <label></label>
                                            <button class="btn btn-success form-control" onclick="AddArray()">Agregar</button>


                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                </div>
        </div>
    </div>
</div>
<script src="~/js/Quotation/jquery.EditCreate.js" type="text/javascript"></script>
<script src="~/js/Quotation/modal/jquery.AddCarasModal.js" type="text/javascript"></script>
